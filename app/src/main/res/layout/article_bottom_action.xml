<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
        <com.rey.material.widget.LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zy_home_action"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"

            android:gravity="center_vertical|center_horizontal"
        >
            <com.rey.material.widget.Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/home_content_collect"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/homeContentActionBtn"
                android:textSize="@dimen/homeContentActionBtn"
                >
            </com.rey.material.widget.Button>

            <com.rey.material.widget.Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/home_content_forward"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/homeContentActionBtn"
                android:textSize="@dimen/homeContentActionBtn"
                android:drawableRight="@drawable/vertical_line"
                android:drawableBottom="#CDCDCD"
                >
            </com.rey.material.widget.Button>
              <com.rey.material.widget.Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/home_content_favourite"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/homeContentActionBtn"
                android:textSize="@dimen/homeContentActionBtn"
                >
            </com.rey.material.widget.Button>
        </com.rey.material.widget.LinearLayout>
         <com.rey.material.widget.LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="-1dp"
             android:background="#fff"
             android:id="@+id/savetomynote"
             android:orientation="vertical"
             android:layout_marginLeft="10dp"
             android:visibility="gone"
             >
             <com.rey.material.widget.RadioButton
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:textColor="#000000"
                 android:id="@+id/checksaveNote"
                 style="@style/Material.Drawable.RadioButton"
                 android:checked="false" />
              <com.rey.material.widget.Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/save"
                  android:text="@string/determine"
                  android:textColor="#000000"
                  android:layout_gravity="left"
                  />
         </com.rey.material.widget.LinearLayout>

</com.rey.material.widget.LinearLayout>