<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/login_bg_1"
    android:alpha="0.5">

    <!-- Login progress -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left_deep"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/go_back"
                />
            <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:maxHeight="50dp"
                android:src="@mipmap/ic_launcher"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="#55000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            >
                <com.rey.material.widget.TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:background="#FFCECECE"
                    android:textSize="16sp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/login_topic"
                    android:visibility="gone"
                    android:text="请先登录"
                    />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:hint="@string/login_user"
                app:hintTextAppearance="?android:attr/textAppearanceMedium"
                >
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="35dp"
                    android:focusable="true"
                    android:background="@null"
                    android:textColor="#FF000000"
                    app:et_labelEllipsize="middle"
                    android:gravity="center_vertical"
                    android:backgroundTint="#ef2711"
                    android:paddingLeft="20dp"
                    android:id="@+id/login_username">
                </android.support.v7.widget.AppCompatEditText>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:hint="@string/login_pwd"
                app:hintTextAppearance="?android:attr/textAppearanceMedium"
                >
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="35dp"
                    android:focusable="true"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:background="@null"
                    android:textColor="#FF000000"
                    app:et_labelEllipsize="middle"
                    android:gravity="center_vertical"
                    android:backgroundTint="#ef2711"
                    android:id="@+id/login_pwd">
                </android.support.v7.widget.AppCompatEditText>
             </android.support.design.widget.TextInputLayout>
             <android.support.v7.widget.ButtonBarLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:minHeight="45dp"
                 android:layout_marginTop="20dp"
                 >
                   <com.rey.material.widget.Button
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/login"
                       android:textSize="25sp"
                       android:textColor="#FFFFFF"
                       android:background="#FF24B7EB"
                       android:id="@+id/loginBtn"
                       />
             </android.support.v7.widget.ButtonBarLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <com.rey.material.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码?"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/register"
                    />

<!--
                <com.rey.material.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还没有注册"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/forget"
                    />
-->

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            >

        </LinearLayout>
</LinearLayout>
